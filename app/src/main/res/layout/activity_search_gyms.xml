<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.SearchGymsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageForGymSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/searchback"
            android:contentDescription="@string/todo" />



        <ImageView
            android:id="@+id/countryFlag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bolt"
            tools:ignore="UnknownId"
            android:contentDescription="@string/my_flag" />


    </LinearLayout>









    <EditText
        android:id="@+id/gymSearchEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="100dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:drawableBottom="@color/cardview_dark_background"
        android:hint="@string/search_for_gyms"
        android:padding="5dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="@color/colorButton"
        android:textEditSuggestionItemLayout="@color/white"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/submitGymLocationButton"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gymSearchEditText"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="376dp"
        android:background="@color/colorButton"
        android:text="@string/search_for_gymnasiums"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Gymnasiums"
        android:id="@+id/savedGymnasiumsButton"
        android:background="@color/colorButton"
        android:textColor="@color/white"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>






</RelativeLayout>